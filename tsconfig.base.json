{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "node",
    "outDir": "build",
    "sourceRoot": "/",
    "rootDir": "/",
    "baseUrl": "./",
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "preserveConstEnums": true
    // "noImplicitAny": true
  },
  // "lib": ["dom", "esnext", "esnext.asynciterable"],
}
